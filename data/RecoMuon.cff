# All the services like the magnitc field, the geometries and so on are included
# in the *.cff

# Seed generator
include "RecoMuon/MuonSeedGenerator/data/standAloneMuonSeeds.cff"

# Stand alone muon track producer
include "RecoMuon/StandAloneMuonProducer/data/standAloneMuons.cff"

# Global muon track producer
include "RecoMuon/GlobalMuonProducer/data/GlobalMuonProducer.cff"

sequence muontracking = {MuonSeed, standAloneMuons, globalMuons}

# Muon Id producer
include "RecoMuon/MuonIdentification/data/muonIdProducerSequence.cff"

sequence muonreco = {muontracking,muonIdProducerSequence}

#seqs/mods to make MuIsoDeposits
include "RecoMuon/MuonIsolationProducers/data/muIsoDeposits.cff"

#seqs/mods to make sums (cones 0.2, 0.3, 0.4, 0.7)
include "RecoMuon/MuonIsolationProducers/data/muIsolationSumInCones.cff"

# full suggested isolation seq
sequence muIsolation = { (muIsoDepositsTk , muIsolationSumsTk)
    & ( muIsoDepositCalByAssociatorTowers , muIsolationSumsAssocTowers ) }

#muon reconstruction plus isolation information
sequence muonreco_plus_isolation = {muonreco,muIsolation}

